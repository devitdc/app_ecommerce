{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block content %}
    <div class="container p-0 mb-4" style="max-width: 600px">
        {% if notification|default %}
        <div class="mt-3">
            <div class="alert alert{{ notification.type }}">{{ notification.message }}</div>
        </div>
        {% endif %}
        <h3 class="mb-3 font-weight-normal text-center">RÃ©initialiser votre mot de passe</h3>
    </div>

    <div class="container border rounded shadow p-3" style="max-width: 600px">
        {{ form_start(form)}}
        <div class="row px-3">
            <div class="col-12 mb-2">
                {{ form_label(form.password.first, "Nouveau mot de passe", { 'label_attr' : { 'class' : 'col-sm-12 col-lg-12 fw-bold'}}) }}
                {{ form_errors(form.password.first) }}
                {{ form_widget(form.password.first, { 'attr' : {'class' : '', 'autofocus' : true}}) }}
            </div>
            <div class="col-12 mb-2">
                {{ form_label(form.password.second, "Confirmez le nouveau mot de passe", { 'label_attr' : { 'class' : 'col-sm-12 col-lg-12 fw-bold'}}) }}
                {{ form_widget(form.password.second, { 'attr' : {'class' : '',}}) }}
            </div>
            {{ include('security/_compromised_password.html.twig') }}
        </div>
        <div class="text-center px-3 mt-2">
            <button class="btn btn-success w-75 mb-2 px-4" type="submit" style="border-radius: 5px;">Valider</button>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
