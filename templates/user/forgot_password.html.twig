{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublié - Le Dressing Français{% endblock %}

{% block content %}
    <style>
        .divider.divider-break {
            line-height: 0;
            margin-bottom: 14px;
            padding-top: 1px;
            position: relative;
            text-align: center;
            top: 2px;
        }
        .divider.divider-break::after {
            background-color: transparent;
            border-top: 1px solid #e7e7e7;
            content: "";
            display: block;
            height: 1px;
            margin-top: -1px;
            position: absolute;
            top: 50%;
            width: 100%;
            z-index: 1;
        }

        .divider.divider-break h5 {
            background-color: #fff;
            color: #767676;
            display: inline-block;
            font-size: 12px;
            font-weight: 400;
            line-height: 1;
            padding: 0 8px 0 7px;
            position: relative;
            z-index: 2;
        }
    </style>
    <div class="mx-auto d-block" style="max-width: 500px;">
        <form method="POST" class="mx-auto d-block mt-5" action="{{ path('user_reset_password') }}">
            {% if error|default %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
            {% if notification|default %}
                <div class="alert alert-{{ notification.type }}">{{ notification.message|raw }}</div>
            {% endif %}

            <h1 class="h3 mb-3 font-weight-normal text-center">Mot de passe oublié ?</h1>
            <p style="font-size: .85rem;">Saisissez l'adresse email associé à votre compte pour recevoir un lien de réinitialisation.</p>
            <label for="inputEmail">Email</label>
            <input type="email" name="email" id="inputEmail" class="form-control mt-2 mb-3" required autofocus>

            <button class="btn btn-lg btn-light w-100 mt-2 border-dark btn-signin" type="submit">
                Réinitialiser le mot de passe
            </button>
        </form>
        <div class="divider divider-break mt-3">
            <h5 aria-level="5">Vous avez un compte ?</h5>
        </div>
        <div class="btn btn-lg btn-primary w-100 mt-2 border-dark mx-auto d-block ">
            <a href="{{ path('security_login') }}" class="text-decoration-none text-light">Se connecter</a>
        </div>

    </div>
{% endblock %}
