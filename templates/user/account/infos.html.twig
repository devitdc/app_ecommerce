{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block content %}
    <div class="container p-0" style="max-width: 700px;">
        <a href="{{ path('user_account') }}">
            <button class="btn btn-primary rounded-1 mt-2 mb-4">
                Retour à votre compte
            </button>
        </a>
    </div>
    <div class="container rounded border p-4" style="max-width: 700px;">
        <h4 class="">Informations personnelles</h4>
        <div class="row mt-4">
            <div class="col-sm-12 col-md-6">
                <p><span class="fw-semibold">Nom :</span>  {{ app.user.lastname ~ ' ' ~ app.user.firstname}}</p>
                <p><span class="fw-semibold">E-mail :</span> {{ app.user.email}}</p>
            </div>
            <div class="col-sm-12 col-md-6 text-sm-start text-md-end">
                <a href="{{ path('user_update_account') }}">
                    <button class="btn btn-primary">Modifier</button>
                </a>
            </div>
        </div>
        <hr class="p-0">
        <h4 class="">Sécurité</h4>
        <div class="row mt-4">
            <div class="col-sm-12 col-md-6">
                <p><span class="fw-semibold">Mot de passe :</span> <span>*******</span></p>
            </div>
            <div class="col-sm-12 col-md-6 text-sm-start text-md-end">
                <a href="{{ path('user_update_password') }}">
                    <button class="btn btn-primary">Modifier</button>
                </a>
            </div>
        </div>
    </div>


{% endblock %}

