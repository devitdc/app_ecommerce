{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block content %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-10">
                <div class="row justify-content-center">
                    <div class="col-md-6">
                        <h3 class="mb-4">Besoin d'aide ?</h3>
                        <p>Contactez-nous à tout moment, nous vous répondrons avec grand plaisir.</p>
                        <p><img src="{{ asset('images/icons/undraw-contact.svg') }}" alt="Page de contact - Le Dressing Français" class="img-fluid" style="height: 350px"></p>
                    </div>
                    <div class="col-md-6">
                        {{ form_start(form) }}
                            <div class="row">
                                <div class="col-md-12 form-group">
                                    {{ form_widget(form) }}
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12">
                                    <input type="submit" value="Send message" class="btn btn-primary rounded-3 py-2 px-4">
                                </div>
                            </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
