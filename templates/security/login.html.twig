{% extends 'base.html.twig' %}

{% block title %}Se connecter - Le Dressing Français{% endblock %}

{% block content %}
    <style>
        .divider.divider-break {
            line-height: 0;
            margin-bottom: 14px;
            padding-top: 1px;
            position: relative;
            text-align: center;
            top: 2px;
        }
        .divider.divider-break::after {
            background-color: transparent;
            border-top: 1px solid #e7e7e7;
            content: "";
            display: block;
            height: 1px;
            margin-top: -1px;
            position: absolute;
            top: 50%;
            width: 100%;
            z-index: 1;
        }

        .divider.divider-break h5 {
            background-color: #fff;
            color: #767676;
            display: inline-block;
            font-size: 12px;
            font-weight: 400;
            line-height: 1;
            padding: 0 8px 0 7px;
            position: relative;
            z-index: 2;
        }
    </style>
    <div class="mx-auto d-block" style="max-width: 400px;">
        <form method="post" class="mx-auto d-block mt-5">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            <h1 class="h3 mb-3 font-weight-normal text-center">Connectez-vous</h1>
            <label for="inputEmail">Email</label>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control mt-2 mb-3" autocomplete="email" required autofocus>
            <label for="inputPassword">Password</label>
            <button class="btn btn-sm my-auto float-end">
                <a href="{{ path('user_reset_password') }}" class="text-decoration-none" style="color: #5A5A5A">Mot de passe oublié ?</a>
            </button>
            <input type="password" name="password" id="inputPassword" class="form-control mt-2" autocomplete="current-password" required>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            {#
                Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                See https://symfony.com/doc/current/security/remember_me.html

                <div class="checkbox mb-3">
                    <label>
                        <input type="checkbox" name="_remember_me"> Remember me
                    </label>
                </div>
            #}

            <a href="{{ path('security_login') }}" class="text-decoration-none text-dark">
                <button class="btn btn-lg btn-light w-100 mt-4  border-dark btn-signin" type="submit">
                    Se connecter
                </button>
            </a>
        </form>
        {#<hr id="hr-signin" class="mt-4">#}
        <div class="divider divider-break mt-3">
            <h5 aria-level="5">Nouveau chez Le Dressing Français ?</h5>
        </div>
        <div class="btn btn-lg btn-primary w-100 mt-2 border-dark mx-auto d-block ">
            <a href="{{ path('user_register') }}" class="text-decoration-none text-light">Créer votre compte</a>
        </div>

    </div>
{% endblock %}
